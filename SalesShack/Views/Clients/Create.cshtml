@{
  ViewData["Title"] = "Add a Client";
}

@model SalesShack.Models.Client;

<div id="create-box">
<div id="form">
	@using (Html.BeginForm())
	{
		<h4 style="text-align: center;">Add a client!</h4><br>
		@Html.TextBoxFor(model => model.Name, new { placeholder = "Name", style = "text-align: center;"})<br><br>
		@Html.TextBoxFor(model => model.Company, new { placeholder = "Company", style = "text-align: center;"})<br><br>
		@Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "(012)-345-6789", style = "text-align: center;"})<br><br>
		<input type="submit" value="Add" id="button"/>
	}
</div>
</div>
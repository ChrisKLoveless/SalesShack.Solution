@{
  ViewData["Title"] = "All Sales";
}

@using SalesShack.Models;

<div class="container" style="text-align: center;">
  <div id="list">
  <h3>List of Sales</h3>

    @if (Model.Count == 0)
    {
      <h3>No Sales have been added yet</h3>
    }
    else
    {
      <ul>
        @foreach (Sale sale in Model)
        {
          <div class="card" style="text-align: center; width: 15rem;">
            @* <img
          src="https://img.icons8.com/external-icongeek26-outline-colour-icongeek26/512/external-sale-pet-care-icongeek26-outline-colour-icongeek26.png"
          class="card-img-top" alt="example sale image"> *@
            <div class="card-body">
              <h5 class="card-title"><strong>@sale.Product.Name</strong> | $@sale.Price</h5><br>
              <p class="btn btn-light">@Html.ActionLink("Details", "Details", "Sales", new { id = @sale.SaleId})</p>
            </div>
          </div>
        }
      </ul>
    }
    <p>@Html.ActionLink("Create a new Sale", "Create")</p>
  </div>
</div>
@{
  ViewData["Title"] = "All Sales";
}

@using SalesShack.Models;

<div class="container" style="text-align: center;">
  <div class="content-wrapper">
    <div id="list">
      <h4><strong>Sales!</strong></h4><br>

      @if (Model.Count == 0)
      {
        <p>No sales have been added yet</p>
      }
      else
      {
        <ul>
          @foreach (Sale sale in Model)
          {
            @* <li style="list-style-position: inside;">@sale.Product.Name | <strong>@Html.ActionLink(@sale.Price,
              "Details", "Sales", new { id = @sale.SaleId})</strong></li> *@
            <li style="list-style-position: inside; padding-right: 40px;">@sale.Product.Name |
              $<strong>@Html.ActionLink(@sale.Price.ToString(), "Details", "Sales", new { id = @sale.SaleId})</strong></li>
          }
        </ul>
      }
    </div>
    <p>@Html.ActionLink("Create a new Sale", "Create")</p>
  </div>
</div>
</div>
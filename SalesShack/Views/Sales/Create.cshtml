@{
	ViewData["Title"] = "Add a Sale";
}

@using SalesShack.Models;
@model SalesShack.Models.Sale;

<p>@Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

<p style="text-align: center;"><strong>NOTE:</strong> <p style="text-align: center;">You must @Html.ActionLink("add a product", "Create", "Products") to add a sale!</p></p>

<div id="create-box">
		@using (Html.BeginForm())
		{
			<h4 style="text-align: center;">Add a sale!</h4><br>
			@Html.EditorFor(m => m.Price, new { htmlAttributes = new { placeholder = "Price", style= "text-align: center;" } })<br><br>
			@Html.EditorFor(m => m.Description, new { htmlAttributes = new { placeholder = "Description", style= "text-align: center;" } })<br><br>
			@Html.EditorFor(m => m.DateSold, new { htmlAttributes = new { placeholder = "DateSold", style= "text-align: center;" } })<br><br>
			@Html.LabelFor(model => model.Product, new {style = "padding-right: 10px;"})
			@Html.DropDownList("ProductId")<br><br>
			<input type="submit" value="Add" id="button"/>
		}
	</div>
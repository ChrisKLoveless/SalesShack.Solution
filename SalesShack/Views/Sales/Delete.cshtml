@{
	ViewData["Title"] = "Sale Delete";
}

@model SalesShack.Models.Sale;

<div class="container" style="text-align: center;">
	<div class="content-wrapper">
		<div id="list">
			<h5><strong>Are you sure?</strong></h5><br>
			<div id="form">
				<p><strong>Sale Price:</strong> <em>@Html.DisplayFor(model => model.Price)</em></p>
				<p><strong>Sale Description:</strong> <em>@Html.DisplayFor(model => model.Description)</em></p><br>
				@using (Html.BeginForm())
				{
					<input type="submit" value="Delete" id="button" />
				}
			</div>
		</div>
	</div>
</div>
</div>
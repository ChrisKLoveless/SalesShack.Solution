@{
  ViewData["Title"] = "All Promotions";
}

@using SalesShack.Models;

<div class="container" style="text-align: center;">
  <div class="content-wrapper">
  <div id="list">
  <h5><strong>Promotions!</strong></h5>

    @if (Model.Count == 0)
    {
      <p>No Promotions have been added yet</p>
    }
    else
    {
      <ul>
        @foreach (Promotion promotion in Model)
        {
          <div class="card" style="text-align: center; width: 15rem;">
            @* <img
          src="https://img.icons8.com/external-icongeek26-outline-colour-icongeek26/512/external-promotion-pet-care-icongeek26-outline-colour-icongeek26.png"
          class="card-img-top" alt="example promotion image"> *@
            <div class="card-body">
              <p class="card-title">@promotion.Product.Name | <strong>@promotion.Title</strong></p><br>
              <p class="btn btn-light">@Html.ActionLink("Details", "Details", "Promotions", new { id = @promotion.PromotionId})</p>
            </div>
          </div>
        }
      </ul>
    }
    </div>
    <p>@Html.ActionLink("Create a new Promotion", "Create")</p>
  </div>
</div>
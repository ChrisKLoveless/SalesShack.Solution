@{
  ViewData["Title"] = "All Promotions";
}

@using SalesShack.Models;

<div class="container" style="text-align: center;">
  <div class="content-wrapper">
  <div id="list">
  <h5><strong>Promotions!</strong></h5><br>

    @if (Model.Count == 0)
    {
      <p>No Promotions have been added yet</p>
    }
    else
    {
      <ul>
        @foreach (Promotion promotion in Model)
        {
              <li style="list-style-position: inside;">@promotion.Product.Name | <strong>@Html.ActionLink(@promotion.Title, "Details", "Promotions", new { id = @promotion.PromotionId})</strong></li><br>
        }
      </ul>
    }
    </div>
    <p>@Html.ActionLink("Create a new Promotion", "Create")</p>
  </div>
</div>
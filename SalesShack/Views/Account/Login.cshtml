@using SalesShack.ViewModels;

@model LoginViewModel;



<div id="login-form">
  <div id = "login-box">
  <img class="login-logo" src="../img/logo-color.png">
  @if (!ViewData.ModelState.IsValid)
  {
    @Html.ValidationSummary("Please fix the following error(s) and then resubmit the form:")
  }

  @using (Html.BeginForm())
  {
   <h5><strong>Login</strong></h5>
   <br><em> @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Addresss", style="text-align: center;"})<br><br></em>

   @Html.EditorFor(m => m.Password, new { htmlAttributes = new { placeholder = "Password", style= "text-align: center;" } })<br><br>


   <input type="submit" value="Log in" id="button"/><br>
  }
  <br><p style="margin-left: 25px;">Dont have an account yet? @Html.ActionLink("Sign up!", "Register")</p>
  </div>
</div>

@addTagHelper Identity.CustomTagHelpers.*, Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model string
@{
	ViewData["Title"] = "CREATE ROLE";
}

<div class="container" style="text-align: center;">
	<h1 style="text-align: center;">Create a Role</h1>
	<a asp-action="Index" class="btn btn-secondary" id="button">Back</a>
	<div asp-validation-summary="All" class="text-danger"></div>

	<form asp-action="Create" method="post">
		<div class="form-group">
			<label for="name">Name:</label>
			<input name="name" class="form-control" />
		</div>
		<button type="submit" class="btn btn-primary mt-3" id="button">Create</button>
	</form>
</div>
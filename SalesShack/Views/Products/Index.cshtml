@{
  ViewData["Title"] = "All Products";
}

@using SalesShack.Models;

<div class="container" style="text-align: center;">
  <div class="content-wrapper">
    <div id="list">
      <h4><strong>Products!</strong></h4><br>

      @if (Model.Count == 0)
      {
        <p>No products have been added yet</p>
      }
      else
      {
        <ul style="padding-left: 70px;">
          @foreach (Product product in Model)
          {
            <div class="card" style="width: 10rem;">
              <div class="card-body">
                <li class="card-title" style="list-style-position: inside;"><strong>@Html.ActionLink(@product.Name,
                "Details", "Products", new { id = @product.ProductId})</strong></li>
              </div>
            </div>
          }
        </ul>
      }
    </div>
    <p>@Html.ActionLink("Create a new Product", "Create")</p>
  </div>
</div>